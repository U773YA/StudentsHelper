<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/notice_main"
    >
    <TextView
        android:id="@+id/notice_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice"
        android:layout_centerHorizontal="true"
        android:textColor="#4db6ac"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAppearance="?android:textAppearanceLarge"
        />

    <TextView
        android:id="@+id/notices"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:textColor="#303f9f"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/pin_main"
        android:textAlignment="center"
        android:drawablePadding="5dp"
        android:layout_marginTop="70dp"
        android:text="NOTICES"
        android:layout_below="@+id/notice_top"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:textColor="#303f9f"
        android:textStyle="bold"
        android:text="NO CLASS"
        android:textSize="24sp"
        android:background="@drawable/pin_main"
        android:id="@+id/absent"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/notices"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/noticesimage"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:textColor="#303f9f"
        android:textStyle="bold"
        android:textSize="24sp"
        android:background="@drawable/pin_main"
        android:textAlignment="center"
        android:drawablePadding="5dp"
        android:layout_marginTop="80dp"
        android:text="NOTICE IMAGES"
        android:layout_below="@+id/notices"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:textColor="#303f9f"
        android:textStyle="bold"
        android:text="EVENTS"
        android:textSize="24sp"
        android:background="@drawable/pin_main"
        android:id="@+id/events"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/noticesimage"
        android:textAlignment="center"
        android:layout_below="@+id/absent"/>
</RelativeLayout>